<?xml version="1.0" encoding="utf-8" ?>
<OOMake version="0.1">
  <Project Name="OOMake">
    
    <!-- Files in groups -->
    <Group Name="Sources">
      <File Name="Find.cpp" />
      <File Name="gcc.cpp" />
      <File Name="Make.cpp" />
      <File Name="Main.cpp" />
      <File Name="Parse.cpp" />
      <File Name="Xml.cpp" />
      <File Name="Util.cpp" >
        <Tool Type="C++Compiler">
          <Define>OOMAKE_PLATFORM="${Target.Platform}"</Define>
          <Define>OOMAKE_CPU="${Target.Architecture}"</Define>
        </Tool>
      </File>
    </Group>

    <Configuration Name="stage2" Type="Program" Default="true">
      <!-- Per-config option -->
      <Option Name="OutputDirectory">../../../bin</Option>
      <Option Name="OutputName">OOMake-staged</Option>
            
      <Tool Type="C++Compiler">
        <Option Name="Warnings">no</Option>
        <Option Name="Optimize">max</Option>
        <Option Name="UseRtti">false</Option>
      </Tool>
      
      <!-- What needs to be built -->
      <Action Type="Make" Groups="Sources" />
    </Configuration>

  </Project>
</OOMake>
